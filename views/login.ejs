<div class="primary">
    <p id="apptitle">Login</p>
    <hr>
    <input type="text" class="inputtxt" id="usuariotxt" placeholder="Nombre de Usuario / E-mail" required="required" />
    <br>
    <input type="password" class="inputtxt" id="passtxt" placeholder="Contraseña" required="required" />
    <button style="margin-top:15px" class="boton" id="loginBtn">Iniciar Sesión</button>
    <p id="errortxt" class="rojo"></p>
    <hr>
    <a href="/auth/google" class="btn btn-danger"><span class="fa fa-google"></span> Entra usando Google</a>
    <hr>
